{
  "permissions": {
    "allow": [
      "Bash(uv run:*)",
      "Bash(uv sync:*)",
      "Bash(pytest:*)",
      "Bash(ruff:*)",
      "Bash(git:*)",
      "Bash(gh:*)"
    ],
    "deny": [
      "Read(.env)",
      "Read(.env.*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ruff format . 2>/dev/null || true"
          }
        ]
      }
    ]
  }
}
